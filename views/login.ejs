<div class="container mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <% include ./partials/messages %>
      <h1 class="text-center mb-3"><i class="fas fa-user-plus"></i>Login</h1>
      <form action="/users/login" method="post">
        <div class="form-group">
          <label for="email">Email</label>
          <input type="email" id="email" name="email" class="form-control" placeholder="Enter Email" value="<%= typeof name != 'undefined' ? email : ''%>" />
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          <input type="password" id="password" name="password" class="form-control" placeholder="Enter Password" value="<%= typeof name != 'undefined' ? password : ''%>" />
        </div>
        <button type="submit" class="btn btn-primary btn-block">Login</button>
      </form>
      <p class="lead mt-4">Don't have an Acccount? <a href="/users/register">Register</a></p>
      <p class="lead">Forgot Password? <a href="/users/reset">Get new Password</a></p>
      <p class="text-secondary small">This is for testing purposes, your information will not be shared with anyone</p>
    </div>
  </div>
</div>
