<div class="container mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <% include ./partials/messages %>
      <h4 class="text-center mb-3"><i class="fas fa-user-plus"></i>Enter Your New Password</h4>
      <form action="/users/resetpassword/<%= id %>" method="post">
        <div class="form-group">
          <label for="password">Password</label>
          <input
            type="password"
            id="password"
            name="password"
            class="form-control"
            placeholder="Enter Password"
            value="<%= typeof name != 'undefined' ? password : ''%>"
          />
        </div>
        <div class="form-group">
          <label for="password2">Comfirm password</label>
          <input
            type="password"
            name="password2"
            class="form-control"
            placeholder="Confirm Password"
            value="<%= typeof name != 'undefined' ? password2 : ''%>"
          />
        </div>
        <button type="submit" class="btn btn-primary btn-block">Submit</button>
      </form>
    </div>
  </div>
</div>
